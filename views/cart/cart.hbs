<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart | Payment</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    <section class="bg-[#eee] md:px-2">
      <div class="lg:w-3/4 w-full mx-auto py-8">
        <div class="flex justify-between md:flex-row flex-col">
          <div>
            <div class="flex justify-center flex-wrap">
              <div
                class="md:w-52 w-64 h-full bg-white shadow-lg rounded-2xl overflow-hidden border border-solid border-[#bbb] ml-4 lg:mb-4 md:mb-4 mb-4"
              >
                <img src="/images/pizaa.jpg" class="w-full" />
                <div class="flex justify-between items-center">
                  <div class="mb-4 px-2">
                    <p class="text-lg font-extrabold mt-2">Rs. 249/-</p>
                    <p class="text-sm font-medium -mt-1">Sweet Corn Pizza</p>
                  </div>
                  <div class="mr-2">
                    <a
                      href="/cart"
                      class="bg-black text-white rounded-full px-3 py-1 text-sm"
                    >Add +</a>
                  </div>
                </div>
              </div>

              <div
                class="md:w-52 w-64 h-full bg-white shadow-lg rounded-2xl overflow-hidden border border-solid border-[#bbb] ml-4 lg:mb-4 md:mb-4 mb-4"
              >
                <img src="/images/pizaa.jpg" class="w-full" />
                <div class="flex justify-between items-center">
                  <div class="mb-4 px-2">
                    <p class="text-lg font-extrabold mt-2">Rs. 249/-</p>
                    <p class="text-sm font-medium -mt-1">Sweet Corn Pizza</p>
                  </div>
                  <div class="mr-2">
                    <a
                      href="/cart"
                      class="bg-black text-white rounded-full px-3 py-1 text-sm"
                    >Add +</a>
                  </div>
                </div>
              </div>

              <div
                class="md:w-52 w-64 h-full bg-white shadow-lg rounded-2xl overflow-hidden border border-solid border-[#bbb] ml-4 lg:mb-4 md:mb-4 mb-4"
              >
                <img src="/images/pizaa.jpg" class="w-full" />
                <div class="flex justify-between items-center">
                  <div class="mb-4 px-2">
                    <p class="text-lg font-extrabold mt-2">Rs. 249/-</p>
                    <p class="text-sm font-medium -mt-1">Sweet Corn Pizza</p>
                  </div>
                  <div class="mr-2">
                    <a
                      href="/cart"
                      class="bg-black text-white rounded-full px-3 py-1 text-sm"
                    >Add +</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-8 xl:w1/4 lg:w-1/3 md:w-2/3 w-5/6 md:mx-0 mx-auto">
            <h1 class="text-2xl font-medium mb-3">Price Summary</h1>
            <p class="flex justify-between mb-1 pb-1 border-b border-slate-300">
              <span class="text-lg">Sweet Corn</span>
              <span class="text-lg font-bold">251 /-</span>
            </p>
            <p class="flex justify-between mb-1 pb-1 border-b border-slate-300">
              <span class="text-lg">Sweet Corn</span>
              <span class="text-lg font-bold">251 /-</span>
            </p>
            <p class="flex justify-between mb-1 pb-1 border-b border-slate-300">
              <span class="text-lg">Sweet Corn</span>
              <span class="text-lg font-bold">251 /-</span>
            </p>
            <p class="flex justify-between bg-black text-white px-2">
              <span class="text-lg">Grand Total</span>
              <span class="text-lg font-bold">603 /-</span>
            </p>
          </div>
        </div>

        <div class="mt-10 md:mt-5">
          <form>
            <h1
              class="text-xl border-b border-[#bbb] pb-1 mb-3 mx-2 font-bold"
            >Contact Details</h1>
            <div class="flex justify-between flex-wrap">
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">First Name</label><br />
                <input
                  type="text"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter your first name here"
                />
              </div>
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">Last name</label><br />
                <input
                  type="text"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter your last name here"
                />
              </div>

              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">Contact Number</label><br />
                <input
                  type="number"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter your number here"
                />
              </div>
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">Complete Address</label><br />
                <input
                  type="text"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter your address here"
                />
              </div>
            </div>
            <h1
              class="text-xl border-b border-[#bbb] pb-1 mb-3 mx-2 font-bold"
            >Payment Details</h1>
            <div class="flex justify-between flex-wrap">
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">Card holder name</label><br />
                <input
                  type="text"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter card holder name here"
                />
              </div>
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">Card Number</label><br />
                <input
                  type="number"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter card number here"
                />
              </div>
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">Expiry (MM/YYYY)</label><br />
                <input
                  type="month"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                />
              </div>
              <div class="lg:w-2/4 w-full px-2">
                <label class="form-label">CVV</label><br />
                <input
                  type="number"
                  class="border-2 border-[#ef4f5f] py-2 px-2 w-full rounded mb-4"
                  placeholder="Enter CVV here"
                />
              </div>
              <div class="text-center w-full mt-5">
                <a
                  href="/confirmation"
                  class="bg-[#ef4f5f] text-white px-6 py-2 font-bold rounded mt-6"
                >
                  Make Payment
                </a>
              </div>
            </div>
          </form>
        </div>

      </div>
    </section>
    <script defer src="https://cdn.tailwindcss.com"></script>
    <script
      defer
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>